<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.chatuilib.customviews.CustomMaterialCardView
        android:id="@+id/cv_chat_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_22sdp"
        app:cardPreventCornerOverlap="false">

        <com.example.chatuilib.customviews.CustomTextView
            android:id="@+id/tv_chat_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:fadeScrollbars="false"
            android:scrollbars="vertical"
            android:text="@string/lib_lorem_ipsum" />

    </com.example.chatuilib.customviews.CustomMaterialCardView>

    <RelativeLayout
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_below="@id/cv_chat_bubble"
        android:layout_alignParentEnd="true">

        <com.example.chatuilib.customviews.CustomShapeableImageView
            android:id="@+id/iv_circle_1"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="@color/lib_colorWhite"
            android:src="@color/lib_colorWhite"
            app:shapeAppearanceOverlay="@style/lib_CircleShapeImageView" />

        <com.example.chatuilib.customviews.CustomShapeableImageView
            android:id="@+id/iv_circle_2"
            android:layout_width="@dimen/_6sdp"
            android:layout_height="@dimen/_6sdp"
            android:layout_below="@id/iv_circle_1"
            android:layout_centerHorizontal="true"
            android:background="@color/lib_colorWhite"
            android:src="@color/lib_colorWhite"
            app:shapeAppearanceOverlay="@style/lib_CircleShapeImageView" />


        <com.example.chatuilib.customviews.CustomShapeableImageView
            android:id="@+id/iv_circle_3"
            android:layout_width="@dimen/_3sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_below="@id/iv_circle_2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@color/lib_colorWhite"
            android:src="@color/lib_colorWhite"
            app:shapeAppearanceOverlay="@style/lib_CircleShapeImageView" />

    </RelativeLayout>

</RelativeLayout>