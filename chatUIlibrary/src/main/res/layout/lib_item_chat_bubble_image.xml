<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_chat_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="@dimen/_2sdp"
            android:background="@drawable/lib_chat_bubble_shape_slant"
            android:layout_marginTop="@dimen/_10sdp">

            <com.example.chatuilib.customviews.CustomTextView
                android:id="@+id/tv_chat_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fadeScrollbars="false"
                android:scrollbars="vertical"
                android:text="@string/lib_lorem_ipsum" />

        </LinearLayout>

        <com.example.chatuilib.customviews.CustomTextView
            android:id="@+id/tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/_2sdp"
            android:text="@string/lib_icon_bot"
            android:textSize="@dimen/_14ssp"
            android:elevation="@dimen/_12sdp"
            app:customTextViewFont="@string/lib_font_icons" />

    </RelativeLayout>

</RelativeLayout>